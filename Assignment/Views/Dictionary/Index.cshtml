@model Dictionary<int, UserModelDictionary>
<div>
    <h2 style="color:white">Add User</h2>
    <form asp-controller="Dictionary" asp-action="AddUser" method="post" style="color:white">
        <div class="form-group">
            <label for="Name">Name:</label>
            <input type="text" id="Name" name="Name" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="Age">Age:</label>
            <input type="number" id="Age" name="Age" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Add User</button>

    </form>
    <span style=" margin-top:10px;">Submit Count :@ViewBag.SubmitCount</span>
</div>

<div>
    <div class="btn btn-primary w-100" id="flip">Show Details</div>
    <div class="table_container mt-2" id="panel">
        <table class="table table-striped">
            <thead>
                
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                </tr>
                
            </thead>
            <tbody>
              @foreach(var obj in Model){
                    <tr>
                        
                        <td>@obj.Value.Name</td>
                        <td>@obj.Value.Age</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


    <script>
        $(document).ready(function () {
            $("#flip").click(function () {
                $("#panel").slideToggle("slow");
            });
        });
    </script>

</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<link href="~/css/user.css" rel="stylesheet" />