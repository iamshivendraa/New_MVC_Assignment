@model NewProject.Models.CityViewModel
@using (Html.BeginForm("SelectedCity", "City", FormMethod.Post))
{
    <div class="bg-dark d-flex align-items-center justify-content-center p-3 gap-4">
        @Html.DropDownListFor(model => model.SelectedCityId, new SelectList(Model.Cities(), "Id", "Name"), "Select your city", new { @class = "form-control" })
    <input type="submit" value="Submit" class="btn btn-primary">
    </div>
}
